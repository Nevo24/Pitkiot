<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow layer - white, larger, semi-transparent -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="6dp"
                android:color="#60FFFFFF"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Middle glow layer - white, medium, more opaque -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#90FFFFFF"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Inner main circle - bright green -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="#C8E57B"/>
            <solid android:color="@android:color/transparent"/>
            <padding
                android:left="8dp"
                android:top="12dp"
                android:right="13dp"
                android:bottom="1dp"/>
        </shape>
    </item>
</layer-list>
