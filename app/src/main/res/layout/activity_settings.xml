<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nevo_mashiach.pitkiot.Settings"
    android:background="@drawable/cork_board"
    android:layoutDirection="ltr">

    <CheckBox
        android:layout_marginTop="11dp"
        android:theme="@style/MyCheckBox"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:button="@null"
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        android:text="@string/settings_auto_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/autoBalaceCheckBox"
        android:textSize="24sp"
        android:checked="false"
        android:textStyle="normal|bold"
        android:gravity="start|center_vertical"
        android:layout_below="@+id/headline"
        android:layout_alignParentRight="true"/>

    <CheckBox
        android:theme="@style/MyCheckBox"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:button="@null"
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        android:text="@string/settings_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundCheckBox"
        android:textSize="24sp"
        android:checked="false"
        android:textStyle="normal|bold"
        android:gravity="start|center_vertical"
        android:layout_below="@+id/autoBalaceCheckBox"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"/>

    <nevo_mashiach.pitkiot.NotActivities.MyButton
        android:text=" ? "
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:background="@drawable/button_blue"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:textStyle="bold"
        android:id="@+id/balanceExplanation"
        android:textSize="24sp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingTop="4dp"
        android:layout_alignTop="@+id/autoBalaceCheckBox"
        android:layout_toLeftOf="@+id/autoBalaceCheckBox"
        android:layout_toStartOf="@+id/autoBalaceCheckBox"
        android:layout_marginTop="-8dp"/>

    <nevo_mashiach.pitkiot.NotActivities.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headline"
        android:text="@string/settings_title"
        android:textSize="38sp"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <!-- Container for all middle content with dynamic spacing -->
    <LinearLayout
        android:id="@+id/middleContentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_below="@+id/soundCheckBox"
        android:layout_above="@+id/resetSettings"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Seconds per round section -->
        <nevo_mashiach.pitkiot.NotActivities.MyTextView
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:text="@string/settings_seconds_per_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:textSize="24sp"/>

        <LinearLayout
            android:id="@+id/roundTimeControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false"
            android:layout_gravity="end"
            android:layout_marginTop="8dp">

            <nevo_mashiach.pitkiot.NotActivities.MyButton
                android:id="@+id/decreaseRoundTime"
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:text="-"
                android:textSize="24sp"/>

            <nevo_mashiach.pitkiot.NotActivities.MyEditText
                android:id="@+id/roundTimeValue"
                android:layout_height="wrap_content"
                android:layout_width="80dp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="60"
                android:textSize="32sp"
                android:textStyle="bold"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:textColor="#88000000"
                android:selectAllOnFocus="true"
                android:maxLength="3"
                android:paddingTop="6dp"/>

            <nevo_mashiach.pitkiot.NotActivities.MyButton
                android:id="@+id/increaseRoundTime"
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:text="+"
                android:textSize="24sp"/>
        </LinearLayout>

        <nevo_mashiach.pitkiot.NotActivities.MyTextView
            android:text="@string/constraint_seconds_1_300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roundTimeConstraint"
            android:textSize="22sp"
            android:textColor="#88000000"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Seconds reduced on pass section -->
        <nevo_mashiach.pitkiot.NotActivities.MyTextView
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:text="@string/settings_seconds_reduced_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/team1Headline"
            android:textSize="24sp"/>

        <LinearLayout
            android:id="@+id/passTimeControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false"
            android:layout_gravity="end"
            android:layout_marginTop="8dp">

            <nevo_mashiach.pitkiot.NotActivities.MyButton
                android:id="@+id/decreasePassTime"
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:text="-"
                android:textSize="24sp"/>

            <nevo_mashiach.pitkiot.NotActivities.MyEditText
                android:id="@+id/passTimeValue"
                android:layout_height="wrap_content"
                android:layout_width="80dp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="10"
                android:textSize="32sp"
                android:textStyle="bold"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:textColor="#88000000"
                android:selectAllOnFocus="true"
                android:maxLength="3"
                android:paddingTop="6dp"/>

            <nevo_mashiach.pitkiot.NotActivities.MyButton
                android:id="@+id/increasePassTime"
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:text="+"
                android:textSize="24sp"/>
        </LinearLayout>

        <nevo_mashiach.pitkiot.NotActivities.MyTextView
            android:text="@string/constraint_seconds_1_300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passTimeConstraint"
            android:textSize="22sp"
            android:textColor="#88000000"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Select teams section -->
        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <nevo_mashiach.pitkiot.NotActivities.MyTextView
                android:id="@+id/team1Text"
                android:gravity="right|center_vertical"
                android:text="@string/settings_select_teams"
                android:textSize="24sp"
                android:textColor="#ffffffff"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <LinearLayout
                android:id="@+id/team1Controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:baselineAligned="false"
                android:layout_below="@+id/team1Text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp">

                <nevo_mashiach.pitkiot.NotActivities.MyButton
                    android:id="@+id/decrease1"
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    android:text="-"
                    android:textSize="24sp"/>

                <nevo_mashiach.pitkiot.NotActivities.MyTextView
                    android:id="@+id/amoutOfTeams"
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#88000000"
                    android:paddingTop="6dp"/>

                <nevo_mashiach.pitkiot.NotActivities.MyButton
                    android:id="@+id/increase1"
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    android:text="+"
                    android:textSize="24sp"/>
            </LinearLayout>

            <nevo_mashiach.pitkiot.NotActivities.MyTextView
                android:text="@string/constraint_teams_2_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/teamsConstraint"
                android:textSize="22sp"
                android:textColor="#88000000"
                android:layout_below="@+id/team1Controls"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"/>
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Edit team scores section -->
        <nevo_mashiach.pitkiot.NotActivities.MyTextView
            android:id="@+id/editScoreHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_edit_team_scores"
            android:textSize="24sp"
            android:textColor="#ffffffff"
            android:gravity="right|center_vertical"/>

        <androidx.percentlayout.widget.PercentRelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <Spinner
                android:id="@+id/settingsSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textAlignment="center"
                android:spinnerMode="dropdown"
                android:dropDownHeight="wrap_content"
                android:background="@null"
                android:textSize="24sp"/>

            <LinearLayout
                android:id="@+id/team2Controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:baselineAligned="false"
                android:layout_below="@+id/settingsSpinner"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp">

                <nevo_mashiach.pitkiot.NotActivities.MyButton
                    android:id="@+id/decrease2"
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    android:text="-"
                    android:textSize="24sp"/>

                <nevo_mashiach.pitkiot.NotActivities.MyTextView
                    android:id="@+id/teamEditableScore"
                    android:layout_height="wrap_content"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#88000000"
                    android:paddingTop="6dp"/>

                <nevo_mashiach.pitkiot.NotActivities.MyButton
                    android:id="@+id/increase2"
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    android:text="+"
                    android:textSize="24sp"/>
            </LinearLayout>
        </androidx.percentlayout.widget.PercentRelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <nevo_mashiach.pitkiot.NotActivities.MyButton
        android:text="@string/settings_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetSettings"
        android:background="@drawable/button_green"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</androidx.percentlayout.widget.PercentRelativeLayout>