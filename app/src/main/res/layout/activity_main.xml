<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nevo_mashiach.pitkiot.MainActivity"
    android:background="@mipmap/cool_background">

    <TextView
        android:id="@+id/settingsIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="âš™ï¸"
        android:textSize="42sp"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/button_settings"/>

    <TextView
        android:id="@+id/languageToggle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="ðŸ‡ºðŸ‡¸"
        android:textSize="42sp"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:focusable="true"/>

    <nevo_mashiach.pitkiot.NotActivities.MyButton
        android:text="@string/button_manage_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addNote"
        android:background="@drawable/button_green"
        android:layout_below="@+id/playGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textColor="#ffffffff"/>

    <nevo_mashiach.pitkiot.NotActivities.MyButton
        android:text="@string/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset"
        android:background="@drawable/button_green"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/noteCount"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"/>

    <nevo_mashiach.pitkiot.NotActivities.MyTextView
        android:textSize="20sp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/noteCount"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <nevo_mashiach.pitkiot.NotActivities.MyButton
        android:text="@string/button_play_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playGame"
        android:background="@drawable/button_green"
        android:textColor="#ffffffff"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/addNote"
        android:layout_alignStart="@+id/addNote"/>

    <ImageView
        app:layout_widthPercent="90%"
        app:layout_aspectRatio="127%"
        android:scaleType="fitCenter"
        android:id="@+id/animationFigure"
        android:layout_centerInParent="true"/>

    <ImageView
        app:layout_widthPercent="90%"
        app:layout_aspectRatio="127%"
        android:scaleType="fitCenter"
        android:id="@+id/gamePlayFigureHappy"
        android:layout_centerInParent="true"/>


</androidx.percentlayout.widget.PercentRelativeLayout>
