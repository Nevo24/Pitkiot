<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nevo_mashiach.pitkiot.MainActivity"
    android:background="@mipmap/cool_background">

    <nevo_mashiach.pitkiot.NotActivities.MyButton
        android:text="ניהול פתקים"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addNote"
        android:background="@drawable/button_green"
        android:layout_below="@+id/playGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textColor="#ffffffff"/>

    <nevo_mashiach.pitkiot.NotActivities.MyButton
        android:text="איפוס משחק"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset"
        android:background="@drawable/button_green"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/settings"
        android:layout_alignLeft="@+id/settings"
        android:layout_alignStart="@+id/settings"
        android:textColor="#ffffffff"/>

    <nevo_mashiach.pitkiot.NotActivities.MyTextView
        android:textSize="17sp"
        android:text="מספר הפתקים: 0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/noteCount"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <nevo_mashiach.pitkiot.NotActivities.MyButton
        android:text="שחק"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playGame"
        android:background="@drawable/button_green"
        android:textColor="#ffffffff"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/addNote"
        android:layout_alignStart="@+id/addNote"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_widthPercent="105%"
        android:id="@+id/animationFigure"
        android:layout_below="@+id/addNote"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/reset"/>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_widthPercent="105%"
        android:id="@+id/gamePlayFigureHappy"
        android:layout_below="@+id/addNote"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/reset"/>

    <nevo_mashiach.pitkiot.NotActivities.MyButton
        android:text="הגדרות"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/settings"
        android:background="@drawable/button_green"
        android:textColor="#ffffffff"
        android:layout_above="@+id/noteCount"
        android:layout_alignLeft="@+id/addNote"
        android:layout_alignStart="@+id/addNote"/>

</androidx.percentlayout.widget.PercentRelativeLayout>
